<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" >

            <Button
                android:id="@+id/e_handcard_1"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:paddingRight="40dp"
                android:paddingTop="30dp"
                android:text="A:\nD:"
                android:textColor="#FFFFFF"
                android:textStyle="italic" />

            <Button
                android:id="@+id/e_handcard_2"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:paddingRight="40dp"
                android:paddingTop="30dp"
                android:text="A:\nD:"
                android:textColor="#FFFFFF"
                android:textStyle="italic" />

            <Button
                android:id="@+id/e_handcard_3"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:paddingRight="40dp"
                android:paddingTop="30dp"
                android:text="A:\nD:"
                android:textColor="#FFFFFF"
                android:textStyle="italic" />

            <Button
                android:id="@+id/e_handcard_4"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:paddingRight="40dp"
                android:paddingTop="30dp"
                android:text="A:\nD:"
                android:textColor="#FFFFFF"
                android:textStyle="italic" />

            <Button
                android:id="@+id/e_handcard_5"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:paddingRight="40dp"
                android:paddingTop="30dp"
                android:text="A:\nD:"
                android:textColor="#FFFFFF"
                android:textStyle="italic" />

            <Button
                android:id="@+id/e_handcard_6"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:paddingRight="40dp"
                android:paddingTop="30dp"
                android:text="A:\nD:"
                android:textColor="#FFFFFF"
                android:textStyle="italic" />

            <Button
                android:id="@+id/e_handcard_7"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:paddingRight="40dp"
                android:paddingTop="30dp"
                android:text="A:\nD:"
                android:textColor="#FFFFFF"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.05"
            android:orientation="horizontal" >

            <FrameLayout
                android:id="@+id/enemy_effect1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp" >

                <Button
                    android:id="@+id/fycard_1"
                    android:layout_width="75dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:paddingRight="40dp"
                    android:paddingTop="50dp"
                    android:scaleType="fitXY"
                    android:textColor="#FFFFFF"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/enemyexplosion1"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/explosion2" 
                    android:visibility="invisible"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/enemy_effect2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp" >

                <Button
                    android:id="@+id/fycard_2"
                    android:layout_width="75dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:paddingRight="40dp"
                    android:paddingTop="50dp"
                    android:scaleType="fitXY"
                    android:textColor="#FFFFFF"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/enemyexplosion2"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/explosion2"
                    android:visibility="invisible" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/enemy_effect3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp" >

                <Button
                    android:id="@+id/fycard_3"
                    android:layout_width="75dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:paddingRight="40dp"
                    android:paddingTop="50dp"
                    android:scaleType="fitXY"
                    android:textColor="#FFFFFF"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/enemyexplosion3"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/explosion2" 
                    android:visibility="invisible"/>

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/turnendlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/layout_bg"
            android:gravity="right"
            android:orientation="vertical"
            android:padding="6dp" >

            <Button
                android:id="@+id/turnend"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_gb2"
                android:padding="10dp"
                android:text="Turn" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/magiclayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/layout_bg"
            android:gravity="right"
            android:orientation="vertical"
            android:visibility="invisible"
            android:padding="6dp" >

            <Button
                android:id="@+id/magicon"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_gb2"
                android:padding="10dp"
                android:visibility="invisible"
                android:text="Magic" />
        </LinearLayout>
        

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <FrameLayout
                android:id="@+id/my_effect1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp" >

                <Button
                    android:id="@+id/fmcard_1"
                    android:layout_width="75dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:paddingRight="40dp"
                    android:paddingTop="50dp"
                    android:scaleType="fitXY"
                    android:textColor="#FFFFFF"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/myexplosion1"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/explosion2"
                    android:visibility="invisible" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/my_effect2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp" >

                <Button
                    android:id="@+id/fmcard_2"
                    android:layout_width="75dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:paddingRight="40dp"
                    android:paddingTop="50dp"
                    android:scaleType="fitXY"
                    android:textColor="#FFFFFF"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/myexplosion2"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/explosion2" 
                    android:visibility="invisible"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/my_effect3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp" >

                <Button
                    android:id="@+id/fmcard_3"
                    android:layout_width="75dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:paddingRight="40dp"
                    android:paddingTop="50dp"
                    android:scaleType="fitXY"
                    android:textColor="#FFFFFF"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/myexplosion3"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/explosion2"
                    android:visibility="invisible" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" >

            <Button
                android:id="@+id/handcard_1"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:paddingRight="40dp"
                android:paddingTop="30dp"
                android:text="A:\nD:"
                android:textColor="#FFFFFF"
                android:textStyle="italic" />

            <Button
                android:id="@+id/handcard_2"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:paddingRight="40dp"
                android:paddingTop="30dp"
                android:text="A:\nD:"
                android:textColor="#FFFFFF"
                android:textStyle="italic" />

            <Button
                android:id="@+id/handcard_3"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:paddingRight="40dp"
                android:paddingTop="30dp"
                android:text="A:\nD:"
                android:textColor="#FFFFFF"
                android:textStyle="italic" />

            <Button
                android:id="@+id/handcard_4"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:paddingRight="40dp"
                android:paddingTop="30dp"
                android:text="A:\nD:"
                android:textColor="#FFFFFF"
                android:textStyle="italic" />

            <Button
                android:id="@+id/handcard_5"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:paddingRight="40dp"
                android:paddingTop="30dp"
                android:text="A:\nD:"
                android:textColor="#FFFFFF"
                android:textStyle="italic" />

            <Button
                android:id="@+id/handcard_6"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:paddingRight="40dp"
                android:paddingTop="30dp"
                android:text="A:\nD:"
                android:textColor="#FFFFFF"
                android:textStyle="italic" />

            <Button
                android:id="@+id/handcard_7"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:paddingRight="40dp"
                android:paddingTop="30dp"
                android:text="A:\nD:"
                android:textColor="#FFFFFF"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/gameovertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/text"
            android:visibility="invisible" />
  		<ImageView
            android:id="@+id/magicImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/text"
            android:visibility="invisible" />
      

    </FrameLayout>

</FrameLayout>