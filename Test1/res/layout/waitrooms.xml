<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginRight="30dp"
        
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/Elose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:text="패" />

    <TextView
        android:id="@+id/Mylose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Elose"
        android:layout_alignBottom="@+id/Elose"
        android:layout_alignLeft="@+id/imageView1"
        android:text="패" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="Ready" />

    <TextView
        android:id="@+id/Mywin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Mylose"
        android:layout_alignLeft="@+id/imageView1"
        android:text="승" />

    <TextView
        android:id="@+id/EWin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Mywin"
        android:layout_alignLeft="@+id/imageView2"
        android:text="승" />

    <TextView
        android:id="@+id/Myid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Mywin"
        android:layout_alignLeft="@+id/imageView1"
        android:text="Myid" />

    <TextView
        android:id="@+id/e_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/EWin"
        android:layout_alignLeft="@+id/imageView2"
        android:text="E_id" />

    <TextView
        android:id="@+id/myname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Myid"
        android:layout_alignLeft="@+id/imageView1"
        android:text="Myname" />

    <TextView
        android:id="@+id/e_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/myname"
        android:layout_alignBottom="@+id/myname"
        android:layout_alignLeft="@+id/imageView2"
        android:text="E_name" />

</RelativeLayout>
